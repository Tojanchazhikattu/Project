            <div id="step-1">
                @*<form method="post" class="form-horizontal form-label-left" action="DeviceDetails" >*@
                    @using (Html.BeginForm("SubmitCustomerInformation", "BookSmartDevice", FormMethod.Post, new { @class = "form-horizontal form-label-left" }))
                    {
                   
                <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">How did you find us?</label>
                <div class="col-md-9 col-sm-9 col-xs-12">
@*                    <select name="ddlDeviceType"  id="ddlDeviceType" class="select2_single form-control" tabindex="-1" onchange="javascript:GetHandSetModel(this.value);">  
                    </select> *@
                   @* Model.Select(i => i.CompanyName).Distinct().ToList()*@
                    @Html.DropDownListFor(x=> x.SearchChannelId,new SelectList(Model.lstSearchChannel, "SearchChannelId", "name"),"Select Channel",new {@class = "select2_single form-control" })
                     
                </div>
                </div>
                <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">First Name</label>
                <div class="col-md-9 col-sm-9 col-xs-12">

                 @Html.TextBoxFor(model => model.FirstName)

                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">Last Name<span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.TextBoxFor(model => model.LastName)

                    </div>
                </div>
                <div class="form-group">
                    <label for="middle-name" class="control-label col-md-3 col-sm-3 col-xs-12">Contact No</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                   @Html.TextBoxFor(model => model.ContactNo)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Email</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                   @Html.TextBoxFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Address<span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                   @Html.TextBoxFor(model => model.Address)

                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Post code<span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                   @Html.TextBoxFor(model => model.PostCode)

                    </div>
                </div>
                </div>
                
               <div class="actionBar">
                   <input name="submit" type="submit" id="Prev" class="btn btn-success"  value="Prev" />
                 @*  <a href="#" class="btn btn-success">Next</a>*@
                   <input name="submit" type="submit" id="Next" class="btn btn-success"  value="Next" />
                  @* <a href="#" class="btn btn-primary buttonDisabled">Previous</a>*@
               </div>
                    }
        

            </div>


         </div>
        <div>

        </div>
